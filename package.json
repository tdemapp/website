{
	"name": "tdem.app",
	"version": "2.1.1",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"build:typed": "vuedx-typecheck . && vite build",
		"serve": "vite preview",
		"prettier": "prettier --write \"src/**/*.{js,ts,css,vue}\""
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSpacing": true,
		"jsxBracketSameLine": true,
		"printWidth": 100,
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true
	},
	"dependencies": {
		"vue": "^3.0.5"
	},
	"devDependencies": {
		"@tailwindcss/aspect-ratio": "^0.2.0",
		"@tailwindcss/forms": "^0.2.1",
		"@vitejs/plugin-vue": "^1.1.2",
		"@vue/compiler-sfc": "^3.0.5",
		"@vuedx/typecheck": "^0.6.0",
		"@vuedx/typescript-plugin-vue": "^0.6.0",
		"autoprefixer": "^10.2.3",
		"postcss": "^8.2.4",
		"prettier": "^2.2.1",
		"tailwindcss": "^2.0.2",
		"typescript": "^4.1.3",
		"vite": "^2.0.0-beta.50"
	}
}
